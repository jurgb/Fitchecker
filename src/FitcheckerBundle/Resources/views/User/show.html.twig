{% extends 'base.html.twig' %}

{% block body %}

    <h1>User profile</h1>
    <div>
        <div>
            Lastname: {{ user.name }}
        </div>
        <div>
            Firstname: {{ user.firstname }}
        </div>
        <div>
            Age: {{ user.age }}
        </div>
        <div>
            Adress: {{ user.street }} {{ user.streetNumber }} {{ user.zipcode }} {{ user.city }}
        </div>
    </div>
    <div>
        <h2>Chosen Exercises:</h2>
        <a href="{{ path('fitchecker_user_addExercise',{'user_id': user.id}) }}">Edit exercise list</a>
        {% for exc in user.exercises %}
            <div>
                {{ exc.name }}
            </div>
        {% endfor %}
    </div>
    <div>
        <h2>Sets executed</h2>
        <a href="{{ path('fitchecker_user_addExerciseSet',{'user_id': user.id}) }}">New set</a>
    </div>

{% endblock %}